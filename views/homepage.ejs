<body style="background-color:#f5decf;" >

    <div>
        <h1>Movie Wishlist App </h1>
        <h3> Welcome <%=username%></h3>
    </div>
    <hr style="width: 80%; margin-left: 150px;">
    <div>
        <p>My Wishlist:</p>
    </div>
    <div>
        <% if(items.length > 0) {%>
        <ul>
            <%for(item of items){%>
                <li>
                    <%=item.Title%>
                </li>
            <%}%>
        </ul>
        <%} else{%>
            <p> No movies to display!</p>
        <%}%>
    </div>
    <div id="indented">
        <a href="/new"> Add a movie to my wishlist</a>
    </div>
    <div id="indented">
        <form method="post" action="/search">
         Search for a movie by title: <input type="text" name="movie_name" placeholder="e.g. Clueless">
         <input type="submit" value= "search" class="mt-5">
        </form>
    </div>
    <div class="image">
        <img src="images/cartoon_popcorn.png" width="55%">
    </div>
    
</body>